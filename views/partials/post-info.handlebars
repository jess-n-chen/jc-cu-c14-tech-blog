<div class="card-body">
  <div class="row my-2">
    <div class="col-8 card-title">
      {{#if loggedIn}}
        <h2><a href="/post/{{id}}">{{title}}</a></h2>
      {{else}}
        <h2>{{title}}</h2>
      {{/if}}
    </div>
    <div class="col-4 card-subtitle">
      Posted by
      {{user.username}}
      on
      {{format_date created_at}}
    </div>
  </div>
  <div class="row card-text">
    <p>{{content}}</p>
  </div>
</div>