<div class="card">
  <h2 class="card-header">Sign Up</h2>
  <form class="signup-form m-3">
    <div class="mb-3">
      <label for="username-signup" class="form-label">Username</label>
      <input type="text" class="form-control" id="username-signup" />
    </div>
    <div class="mb-3">
      <label for="password-signup" class="form-label">Password</label>
      <input type="password" class="form-control" id="password-signup" />
    </div>
    <div class="mb-3">
      <button type="submit" class="btn-form">Sign Up!</button>
    </div>
    <div class="mb-3">
      <a href="/login" class="alt-link">Login instead</a>
    </div>
  </form>
</div>

<script src="/javascript/signup.js"></script>