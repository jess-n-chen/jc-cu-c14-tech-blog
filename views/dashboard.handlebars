{{#if posts.length}}
  <section>
    <h2>Your Posts</h2>
    {{#each posts as |post|}}
      <div class="post px-3 my-3">
        <div class="row post-header">
          <div class="col-8">
            <h2><a href="/dashboard/edit/{{id}}">{{title}}</a></h2>
          </div>
          <div class="col-4 post-meta">
            <p>{{format_date created_at}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </section>
{{/if}}

<div class="new-post text-center">
  <a href="/dashboard/new" class="btn-new">+ New Post</a>
</div>